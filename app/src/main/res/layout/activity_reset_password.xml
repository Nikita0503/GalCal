<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient">


  <TextView
      android:id="@+id/textView_reset"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="150dp"
      android:fontFamily="@font/orbitron_medium"
      android:gravity="center_horizontal"
      android:text="Hey there"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:fontFamily="@font/orbitron_medium"
      android:gravity="center_horizontal"
      android:text="Resetting password?"

      android:textColor="@color/colorWhite"
      android:textSize="18sp"
      app:layout_constraintEnd_toEndOf="@+id/textView_reset"
      app:layout_constraintHorizontal_bias="0.489"
      app:layout_constraintStart_toStartOf="@+id/textView_reset"
      app:layout_constraintTop_toBottomOf="@+id/textView_reset" />





  <EditText
      android:id="@+id/new_password_reset"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_gravity="bottom"

      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:autofillHints="true"
      android:background="@color/colorWhite"
      android:hint="New password"
      android:inputType="textPassword"
      android:paddingEnd="15dp"
      android:paddingStart="15dp"
      android:singleLine="true"
      android:textColor="@color/colorGrey"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2"
      app:layout_constraintWidth_percent="0.8"
      tools:targetApi="o" />

  <EditText
      android:id="@+id/password_reset_repeat"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_gravity="bottom"

      android:layout_marginTop="16dp"
      android:autofillHints="true"
      android:background="@color/colorWhite"
      android:hint="Repeat password"
      android:inputType="textPassword"
      android:paddingEnd="15dp"
      android:paddingStart="15dp"
      android:singleLine="true"
      android:textColor="@color/colorGrey"
      app:layout_constraintEnd_toEndOf="@+id/new_password_reset"
      app:layout_constraintStart_toStartOf="@+id/new_password_reset"
      app:layout_constraintTop_toBottomOf="@+id/new_password_reset"
      app:layout_constraintWidth_percent="0.8"
      tools:targetApi="o" />

  <Button
      android:id="@+id/reset_password_button"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/green_button_background"
      android:text="Reset password"
      android:textAllCaps="false"
      android:textColor="@color/colorWhite"
      android:transitionName="sign_up_button_registration"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/password_reset_repeat"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/password_reset_repeat"
      app:layout_constraintTop_toBottomOf="@+id/password_reset_repeat"
      app:layout_constraintVertical_bias="0.034" />

