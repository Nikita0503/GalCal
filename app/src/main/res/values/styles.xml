<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/orbitron_medium</item>
    </style>

    <style name="WeekAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/orbitron_medium</item>

    </style>

    <style name="DayAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/calendar_date_text_color</item>
    </style>
</resources>
